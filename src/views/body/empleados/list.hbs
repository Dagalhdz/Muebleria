<a class="btn btn-outline-primary mb-4" href="/empleados/add"><i class="fas fa-plus-circle"></i> Agregar Nuevo Empleado</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center min-letra" scope="col">id</th>
      <th class="text-uppercase text-center min-letra" scope="col">nombre</th>
      <th class="text-uppercase text-center min-letra" scope="col">apellido</th>
      <th class="text-uppercase text-center min-letra" scope="col">email</th>
      <th class="text-uppercase text-center min-letra" scope="col">sexo</th>
      <th class="text-uppercase text-center min-letra" scope="col">Fecha de nacimiento</th>
      <th class="text-uppercase text-center min-letra" scope="col">Puesto</th>
      <th class="text-uppercase text-center min-letra" scope="col">estado</th>
      <th class="text-uppercase text-center min-letra" scope="col">municipio</th>
      <th class="text-uppercase text-center min-letra" scope="col">colonia</th>
      <th class="text-uppercase text-center min-letra" scope="col">calle</th>
      <th class="text-uppercase text-center min-letra" scope="col">CP</th>
      <th class="text-uppercase text-center min-letra" scope="col">Num Exterior</th>
      <th class="text-uppercase text-center min-letra" scope="col">num telefonico</th>
      <th class="text-uppercase text-center min-letra" scope="col">Editar</th>
      <th class="text-uppercase text-center min-letra" scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
     {{#each empleados}}
    <tr>
      <th class="align-middle text-center min-letra" scope="row">{{id}}</th>
      <td class="align-middle text-center min-letra">{{nombre}}</td>
      <td class="align-middle text-center min-letra">{{apellido}}</td>
      <td class="align-middle text-center min-letra">{{email}}</td>
      <td class="align-middle text-center min-letra">{{sexo}}</td>
      <td class="align-middle text-center min-letra">{{fecha_nac}}</td>
      <td class="align-middle text-center min-letra">{{puesto}}</td>
      <td class="align-middle text-center min-letra">{{estado}}</td>
      <td class="align-middle text-center min-letra">{{municipio}}</td>
      <td class="align-middle text-center min-letra">{{colonia}}</td>
      <td class="align-middle text-center min-letra">{{calle}}</td>
      <td class="align-middle text-center min-letra">{{codigo_postal}}</td>
      <td class="align-middle text-center min-letra">{{num_exterior}}</td>
      <td class="align-middle text-center min-letra">{{telefono}}</td>
      <td class="align-middle text-center min-letra"><a class="text-success" style="font-size: 1rem;" href="/empleados/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center min-letra"><a class="text-danger" style="font-size: 1rem;" href="/empleados/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

