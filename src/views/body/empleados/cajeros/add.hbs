<div class="container p-4">
   <div class="row">
      <div class="col-md-4 mx-auto">
         <h2> Nuevo Cajero</h2>
         <div class="card">
            <div class="card-body">
               <form action="/empleados/cajeros/add" method="POST">
                  <div class="form-group">
                     <label for="categoria">Seleccione el cajero:</label>
                     <select class="form-control" id="cajero" name="cajero" required>
                        <option value="">Nada</option>
                        {{#each cajero}}
                           <option value="{{id}}">{{id}} - {{nombre}}</option>
                        {{/each}}
                     </select>
                  </div>
                  <div class="form-group">
                     <input type="submit" class="btn btn-success btn-block" value="Save">
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>