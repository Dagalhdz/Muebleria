<a class="btn btn-outline-primary mb-4" href="/empleados/puesto/add"><i class="fas fa-plus-circle"></i> Agregar Nueva Puesto de trabajo</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center" scope="col">id</th>
      <th class="text-uppercase text-center" scope="col">nombre</th>
      <th class="text-uppercase text-center" scope="col">descripcion</th>
      <th class="text-uppercase text-center" scope="col">salario</th>
      <th class="text-uppercase text-center" scope="col">Editar</th>
      <th class="text-uppercase text-center" scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
     {{#each puesto}}
    <tr>
      <th class="align-middle text-center" scope="row">{{id}}</th>
      <td class="align-middle text-center">{{nombre}}</td>
      <td class="align-middle">{{descripcion}}</td>
      <td class="align-middle text-center">${{salario}}</td>
      <td class="align-middle text-center"><a class="text-success" style="font-size: 2rem;" href="/empleados/puesto/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center"><a class="text-danger" style="font-size: 2rem;" href="/empleados/puesto/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

