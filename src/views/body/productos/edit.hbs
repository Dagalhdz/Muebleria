
<div class="row">
   <div class="col-md-8 mx-auto">
      <h2> Editar Producto</h2>
      <div class="card p-2 shadow-lg bg-white rounded">
         <div class="card-body">
            <form action="/Productos/edit/{{producto.id}}" method="POST">
               <div class="form-group">
                  <label for="id">id:</label>
                  <input
                     type="text"
                     class="form-control"
                     id="id"
                     name="id"
                     value="{{producto.id}}"
                     placeholder="Ingrese el id del producto"
                     required
                     disabled
                  />
               </div>
               <div class="form-group">
                  <label for="nombre">nombre:</label>
                  <input
                     type="text"
                     class="form-control"
                     id="nombre"
                     name="nombre"
                     value="{{producto.nombre}}"
                     placeholder="Ingrese el el nombre del producto"
                     required
                  />
               </div>
               <div class="form-group">
                  <label for="precio">precio:</label>
                  <input
                     type="number"
                     min="0"
                     class="form-control"
                     id="precio"
                     name="precio"
                     value="{{producto.precio}}"
                     placeholder="Ingrese el precio del producto"
                     required
                  />
               </div>
               <div class="form-group">
                  <label for="categoria">Seleccione una categoria:</label>
                  <select class="form-control" id="categoria" name="categoria" required>
                     <option value="{{categoriaId.id}}">{{categoriaId.nombre}}</option>
                     {{#each categoria}}
                     <option value="{{id}}">{{nombre}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="material">Seleccione una material:</label>
                  <select class="form-control" id="material" name="material" required>
                     <option value="{{materialId.id}}">{{materialId.material}}</option>
                     {{#each material}}
                     <option value="{{id}}">{{material}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="color">Seleccione una color:</label>
                  <select class="form-control" id="color" name="color" onclick="" required>
                     <option value="{{colorId.id}}">{{colorId.color}}</option>
                     {{#each color}}
                     <option value="{{id}}">{{color}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="existencia">existencia:</label>
                  <input
                     type="number"
                     min="0"
                     class="form-control"
                     id="existencia"
                     name="existencia"
                     value="{{producto.existencia}}"
                     placeholder="Ingrese la existencia del producto"
                     required
                  />
               </div>
               <div class="form-group">
                  <label for="description">description:</label>
                  <textarea
                     class="form-control"
                     id="description"
                     rows="3"
                     maxlength="500"
                     name="description"
                     required
                  >{{producto.descripcion}}</textarea>
               </div>
               <div class="form-group">
                  <input type="submit" class="btn btn-success btn-block" value="Guardar">
               </div>
            </form>
         </div>
      </div>
   </div>
</div>