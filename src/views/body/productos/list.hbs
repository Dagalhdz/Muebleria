<a class="btn btn-outline-primary mb-4" href="/Productos/add"><i class="fas fa-plus-circle"></i> Agregar Nuevo Producto</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center" scope="col">id</th>
      <th class="text-uppercase text-center" scope="col">nombre</th>
      <th class="text-uppercase text-center" scope="col">precio</th>
      <th class="text-uppercase text-center" scope="col">categoria</th>
      <th class="text-uppercase text-center" scope="col">material</th>
      <th class="text-uppercase text-center" scope="col">color</th>
      <th class="text-uppercase text-center" scope="col">existencia</th>
      <th class="text-uppercase text-center" scope="col">descripcion</th>
      <th class="text-uppercase text-center" scope="col">Editar</th>
      <th class="text-uppercase text-center" scope="col">eliminar</th>
    </tr>
  </thead>
  <tbody>
     {{#each productos}}
    <tr>
      <th class="align-middle text-center" scope="row">{{id}}</th>
      <td class="align-middle text-center">{{nombre}}</td>
      <td class="align-middle text-center">${{precio}}</td>
      <td class="align-middle text-center">{{categoria}}</td>
      <td class="align-middle text-center">{{material}}</td>
      <td class="align-middle text-center">{{color}}</td>
      <td class="align-middle text-center">{{existencia}}</td>
      <td>{{descripcion}}</td>
      <td class="align-middle text-center"><a class="text-success" style="font-size: 2rem;" href="/Productos/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center"><a class="text-danger" style="font-size: 2rem;" href="/Productos/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

