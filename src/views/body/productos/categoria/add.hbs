<div class="container p-4">
   <div class="row">
      <div class="col-md-4 mx-auto">
         <h2> Nuevo Categoria</h2>
         <div class="card">
            <div class="card-body">
               <form action="/productos/categoria/add" method="POST">
                  <label for="categoria">categoria: </label>
                  <div class="form-group">
                     <input
                        type="text"
                        class="form-control"
                        name="categoria"
                        id="categoria"
                        placeholder="Ingresa un categoria nuevo"
                        autofocus
                        required
                     />
                  </div>
                  <div class="form-group">
                  <label for="description">description:</label>
                  <textarea
                     class="form-control"
                     id="description"
                     rows="3"
                     maxlength="100"
                     name="description"
                     placeholder="Ingres una descripcion del categoria"
                     required
                  ></textarea>
                  <div class="form-group mt-4">
                     <input type="submit" class="btn btn-success btn-block" value="Save">
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>