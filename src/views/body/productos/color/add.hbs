<div class="container p-4">
   <div class="row">
      <div class="col-md-4 mx-auto">
         <h2> Nuevo Color</h2>
         <div class="card">
            <div class="card-body">
               <form action="/Productos/color/add" method="POST">
                  <label for="color">color: </label>
                  <div class="form-group">
                     <input
                        type="text"
                        class="form-control"
                        name="color"
                        id="color"
                        placeholder="Ingresa un color nuevo"
                        autofocus
                        required
                     />
                  </div>
                  <div class="form-group">
                     <input type="submit" class="btn btn-success btn-block" value="Save">
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>