<a class="btn btn-outline-primary mb-4" href="/proveedores/producto/add"><i class="fas fa-plus-circle"></i> Agregar producto para proveedor</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center" scope="col">id</th>
      <th class="text-uppercase text-center" scope="col">nombre del proveedor</th>
      <th class="text-uppercase text-center" scope="col">empresa del proveedor</th>
      <th class="text-uppercase text-center" scope="col">producto</th>
      <th class="text-uppercase text-center" scope="col">Editar</th>
      <th class="text-uppercase text-center" scope="col">Eliminar</th>
      
    </tr>
  </thead>
  <tbody>
     {{#each result}}
    <tr>
      <th class="align-middle text-center" scope="row">{{id}}</th>
      <td class="align-middle text-center">{{nombre_proveedor}}</td>
      <td class="align-middle text-center">{{empresa}}</td>
      <td class="align-middle text-center">{{nombre_producto}}</td>
      <td class="align-middle text-center"><a class="text-success" style="font-size: 2rem;" href="/proveedores/producto/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center"><a class="text-danger" style="font-size: 2rem;" href="/proveedores/producto/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

