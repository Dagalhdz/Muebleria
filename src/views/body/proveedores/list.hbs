<a class="btn btn-outline-primary mb-4" href="/proveedores/add"><i class="fas fa-plus-circle"></i> Agregar Nuevo Proveedor</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center small-letra" scope="col">id</th>
      <th class="text-uppercase text-center small-letra" scope="col">nombre</th>
      <th class="text-uppercase text-center small-letra" scope="col">apellido</th>
      <th class="text-uppercase text-center small-letra" scope="col">empresa</th>
      <th class="text-uppercase text-center small-letra" scope="col">estado</th>
      <th class="text-uppercase text-center small-letra" scope="col">municipio</th>
      <th class="text-uppercase text-center small-letra" scope="col">colonia</th>
      <th class="text-uppercase text-center small-letra" scope="col">calle</th>
      <th class="text-uppercase text-center small-letra" scope="col">CP</th>
      <th class="text-uppercase text-center small-letra" scope="col">Num Exterior</th>
      <th class="text-uppercase text-center small-letra" scope="col">num telefonico</th>
      <th class="text-uppercase text-center small-letra" scope="col">Editar</th>
      <th class="text-uppercase text-center small-letra" scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
     {{#each proveedores}}
    <tr>
      <th class="align-middle text-center small-letra" scope="row">{{id}}</th>
      <td class="align-middle text-center small-letra">{{nombre}}</td>
      <td class="align-middle text-center small-letra">{{apellido}}</td>
      <td class="align-middle text-center small-letra">{{empresa}}</td>
      <td class="align-middle text-center small-letra">{{estado}}</td>
      <td class="align-middle text-center small-letra">{{municipio}}</td>
      <td class="align-middle text-center small-letra">{{colonia}}</td>
      <td class="align-middle text-center small-letra">{{calle}}</td>
      <td class="align-middle text-center small-letra">{{codigo_postal}}</td>
      <td class="align-middle text-center small-letra">{{num_exterior}}</td>
      <td class="align-middle text-center small-letra">{{telefono}}</td>
      <td class="align-middle text-center small-letra"><a class="text-success" style="font-size: 1rem;" href="/proveedores/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center small-letra"><a class="text-danger" style="font-size: 1rem;" href="/proveedores/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

