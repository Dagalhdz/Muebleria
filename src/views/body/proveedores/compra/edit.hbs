
<div class="row">
   <div class="col-md-8 mx-auto">
      <h2> Editar Orden de Compra</h2>
      <div class="card p-2 shadow-lg bg-white rounded">
         <div class="card-body">
            <form action="/proveedores/compra/edit/{{ordenId.id}}" method="POST">
               <div class="form-group">
                  <label for="id">id:</label>
                  <input
                     type="number"
                     min="0"
                     class="form-control"
                     id="id"
                     name="id"
                     value="{{ordenId.id}}"
                     placeholder="Ingrese el id del la orden de compra"
                     required
                     disabled
                  />
               </div>
               <div class="form-group">
                  <label for="producto">Seleccione un proveedor de productos:</label>
                  <select class="form-control" id="prod-prov" name="prod_prov" onchange="getPrecio()" required>
                     <option value="{{provCompraId.id}}">{{provCompraId.proveedor}} - {{provCompraId.producto}}</option>
                     {{#each provCompraAll}}
                        <option value="{{id}}">{{proveedor}} - {{producto}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="cantidad">cantidad:</label>
                  <input
                     type="text"
                     class="form-control"
                     id="cantidad"
                     name="cantidad"
                     value="{{ordenId.cantidad}}"
                     placeholder="Ingrese la cantidad comprada"
                     oninput="getPrecio()"
                     required
                  />
               </div>
               <div class="form-group">
                  <label for="subtotal">subtotal:</label>
                  <input
                     type="text"
                     class="form-control"
                     id="subtotal"
                     value="{{ordenId.sub_total}}"
                     name="subtotal"
                     readonly
                     required
                  />
               </div>
               <div class="form-group">
                  <label for="total">total:</label>
                  <input
                     type="text"
                     class="form-control"
                     id="total"
                     value="{{ordenId.total}}"
                     name="total"
                     readonly
                     required
                  />
               </div>
               <div class="form-group">
                  <input type="submit" class="btn btn-success btn-block" value="Guardar">
               </div>
            </form>
         </div>
      </div>
   </div>
</div>