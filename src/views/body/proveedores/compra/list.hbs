<a class="btn btn-outline-primary mb-4" href="/proveedores/compra/add"><i class="fas fa-plus-circle"></i> Agregar Orden de compra</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-uppercase text-center" scope="col">id</th>
      <th class="text-uppercase text-center" scope="col">nombre del proveedor</th>
      <th class="text-uppercase text-center" scope="col">producto</th>
      <th class="text-uppercase text-center" scope="col">fECHA DE compra</th>
      <th class="text-uppercase text-center" scope="col">cantidad</th>
      <th class="text-uppercase text-center" scope="col">SUB TOTAL</th>
      <th class="text-uppercase text-center" scope="col">TOTAL</th>
      <th class="text-uppercase text-center" scope="col">Editar</th>
      <th class="text-uppercase text-center" scope="col">Eliminar</th>
      
    </tr>
  </thead>
  <tbody>
     {{#each compra}}
    <tr>
      <th class="align-middle text-center" scope="row">{{id}}</th>
      <td class="align-middle text-center">{{proveedor}}</td>
      <td class="align-middle text-center">{{producto}}</td>
      <td class="align-middle text-center">{{fecha_compra}}</td>
      <td class="align-middle text-center">{{cantidad}}</td>
      <td class="align-middle text-center">${{sub_total}}</td>
      <td class="align-middle text-center">${{total}}</td>
      <td class="align-middle text-center"><a class="text-success" style="font-size: 2rem;" href="/proveedores/compra/edit/{{id}}"><i class="fas fa-edit"></i></a></td>
      <td class="align-middle text-center"><a class="text-danger" style="font-size: 2rem;" href="/proveedores/compra/delete/{{id}}"><i class="fas fa-trash"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

